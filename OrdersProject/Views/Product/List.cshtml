@using System.Web.UI.WebControls
@model IEnumerable<OrdersProject.Models.ProductViewModel>


<h2>List of products</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class ="icon-next"></i>Create</a>
</p>

<table class="table table-hover table-striped">
    <colgroup>
        <col />
        <col />
    </colgroup>
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
        @{
            foreach(var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = product.Id }, new { @class = "btn btn-primary" })
            </td>
            <td>@using (Html.BeginForm("Delete", "Product"))
                {
                    @Html.Hidden("Id", product.Id)
                    <button type="submit" class ="btn btn-danger">Delete</button>

                }
            </td>
            
        </tr>
    }
        }
    </tbody>
</table>
